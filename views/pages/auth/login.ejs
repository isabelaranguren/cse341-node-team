<%- include('../../includes/head.ejs') %>
<%- include('../../includes/header.ejs') %>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('../../includes/navigation.ejs') %>
    <div class="container mt-5">
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <div class="d-flex justify-content-center align-items-center">
        <section id="login">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-wrap">
                    
            <h5>Log in with your email account</h5>

        <form class="login-form" action="/login" method="POST" id="login-form">
            <div class="form-group">
                <label for="email" class="sr-only">Email</label>
                <input class="form-control<%= validationErrors.find(e => e.param === 'email' ) ? 'invalid' : '' %>" type="email"
                    name="email" id="email" value="<%= oldInput.email %>" placeholder="somebody@example.com">
            </div>
            <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input class="form-control <%= validationErrors.find(e => e.param === 'password' ) ? 'invalid' : '' %>"
                    type="password" name="password" id="password" value="<%= oldInput.password %>" placeholder="Password">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="d-flex justify-content-center">
                <button class="btn btn-custom mt-3"  type="submit">Login</button>
              </div>

    </form>
    <hr>
    <a href="/reset">Forgot your password?</a>
    <a  href="/signup">Don't have an account? Signup</a>
    
</div>
</div> <!-- /.col-xs-12 -->
</div> <!-- /.row -->
</div> <!-- /.container -->
</section>
</div>
</div>
    <script href="/public/scripts/example.js"></script>
    <%- include('../../includes/end.ejs') %>