<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="css/main.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="movie-container">
        <div class="movies mt-5">
        <% for (let popularMovie of popularMovieList) { %>
            <figure class ="movie__figure">
            <a href="/title/<%= popularMovie.id %>">
                <img class="movie__poster" src="<%= 'https://image.tmdb.org/t/p/w300_and_h450_bestv2' + popularMovie.poster_path %>" alt="Movie Poster">
            </a>
            <figcaption>
                <span class="movie__vote"><% popularMovie.vote_average %></span>  
              </figcaption>
              <h2 class ="movie__title"> <%= popularMovie.title %> </h2>
            </figure>
        <% } %>
    </div>
        <!-- PREVIOUS BUTTON DOES NOT WORK -->
        <nav class="mt-5" aria-label="Page navigation">
            <ul class="pagination justify-content-center">
        <% if (currentPage !== 1 && previousPage !== 1) { %>
            <!-- <li class="page-item disabled">
                <a class="page-link" href="?page=<%= previousPage %>"tabindex="-1">Previous</a>
            </li> -->
        <% } %>

        <% if (hasPrevious) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= previousPage %>" class=""><%= previousPage %></a></li>
        <% } %>
        <li class="page-item"><a class="page-link" href="?page=<%= currentPage %>"><%= currentPage %></a></li>
        <li class="page-item"><a class="page-link" href="?page=<%= nextPage %>" class=""><%= nextPage %></a></li>
            </ul>
            </nav>
        </div>
          
<%- include('../includes/end.ejs') %>
