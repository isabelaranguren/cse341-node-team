<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <h1 style="text-align:center;"><%= user[0].firstName %>'s List</h1>
            <% if (titles.length > 0) { %>
                <ul class="cart__item-list">
                    <% titles.forEach(p => { %>
                        <li class="cart__item">
                            <h1><%= p.titles[0].title %></h1>
                            <img src="<%= 'http://image.tmdb.org/t/p/w200' + p.titles[0].poster_path %>" alt="Movie Poster">
                            <form action="/delete-title" method="POST">
                                <input type="hidden" value="<%= p._id %>" name="titleId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn danger" type="submit">Delete</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
                
            <% } else { %>
                <h1 style="text-align:center;">No Media added!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>